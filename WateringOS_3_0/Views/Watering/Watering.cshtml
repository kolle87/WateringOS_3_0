            title: {
                display: false,
                text: 'Valves',
                fontSize: 16,
                fontFamily: 'Helvetica'
            },
            legend: {
                display: true
            },
            scales: {
                yAxes: [{
                    ticks: {
                        max: 2,
                        min: 0,
                        stepSize: 1,
